<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:orientation="vertical"
		tools:context="com.programqii.printercontrol.MainActivity">
		<TextView
			android:id="@+id/positionTextView"
			android:layout_width="match_parent"
			tools:text="current pos: 0,0,0"
			android:layout_height="50dp"/>
		<TableLayout
			android:orientation="vertical"
			android:stretchColumns="*"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TableRow
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				>
				<Button
					android:id="@+id/printerHeadZIncButton"
					android:text="Z+"
					/>
				<Button
					android:id="@+id/printerHeadYDecButton"
					android:text="Y-"
					/>
				<View
					android:layout_height="0dp"
					android:layout_width="0dp"
					/>
			</TableRow>
			<TableRow>
				<Button
					android:id="@+id/printerHeadXIncButton"
					android:text="X+"
					/>
				<View
					android:layout_height="0dp"
					android:layout_width="0dp"
					/>
				<Button
					android:id="@+id/printerHeadXDecButton"
					android:text="X-"
					/>
			</TableRow>
			<TableRow>
				<Button
					android:id="@+id/printerHeadZDecButton"
					android:text="Z-"
					/>
				<Button
					android:id="@+id/printerHeadYIncButton"
					android:text="Y+"
					/>
				<View
					android:layout_height="0dp"
					android:layout_width="0dp"
					/>
			</TableRow>
		</TableLayout>
		<TextView
			android:layout_marginTop="50dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Movement delta"
			/>
		<EditText
			android:id="@+id/deltaEditText"
			android:layout_width="match_parent"
			android:inputType="numberDecimal"
			android:layout_height="match_parent"/>
		<Button
			android:layout_marginTop="50dp"
			android:id="@+id/printerHomeButton"
			android:text="Home Printer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
	</LinearLayout>
</ScrollView>