extends layout

block content
  h1= title
  p Yo! Welcome to #{title}
  div(id="status" class="statusBox")
  div
    button(class="btn primary", data-action="bea" id="autoHome").Send Auto Home
    button(class="btn cool", data-action="bea" id="Gcode").Send Gcode 
    input(type='text', name='gCode', id='gCode', value = '')
  div
    button(class="btn heat", data-action="bea" id="heatBed").Send Heat Bed
    button(class="btn cool", data-action="bea" id="bedOff").Send Bed Off
  div
    button(class="btn heat", data-action="bea" id="heatExtruder").Send Heat Extruder
    button(class="btn cool", data-action="bea" id="extruderOff").Send Extruder Off
    
      
  div
     table(id='gCodeFilesTable')
      thead
        tr: th Files
      tbody(id="tbody")
      
    
